doctype html
html(lang="es")
   head
      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      title CPOE
      link(rel="shortcut icon", href="./img/dot.png", type="image/png")
      link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
      link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", defer)
      style.
         body {
            background-image: url('./img/fondo-cuadro.svg');
            background-size: cover;
            background-repeat: no-repeat;
         }
   body.d-flex.align-items-center.justify-content-center.vh-100
      .wave-container
      .container
         .row.justify-content-center
            .col-md-5
               .card
                  .card-body.mx-2
                     h5.card-title.text-center.mt-2.mb-3 CPOE
                     form(action="/entrar" method="POST")
                        .form-floating.mb-3
                           //- span.input-group-text Usuario
                           input#usuario.form-control(type="text" placeholder="Usuario" required)
                           label.floatingInput
                              i.bi.bi-person-fill
                              |  Usuario
                        .form-floating.mb-4
                           //- label.form-label(for="password") Contraseña
                           input#clave.form-control(type="password" placeholder="Contraseña" required)
                           label.floatingInput
                              i.bi.bi-lock-fill
                              |  Contraseña
                        .d-grid.mb-3
                           button#ingresar.btn.btn-success(type="submit") Ingresar
                        .text-center.mb-3
                           span#mensaje
      script(src="./js/acceso.js") 